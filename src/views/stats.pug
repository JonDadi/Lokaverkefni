extends layout

block content
  header
    nav.navbar.navbar-default.navbar-fixed-top
      div.container
        div
          button(data-toggle="collapse" data-target="#navbar").navbar-toggle.collapsed
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        div.collapse.navbar-collapse#navbar
          ul.nav.navbar-nav
            li
              a(href= "/").text-uppercase Flights
            li.active
              a(href= "/statistics").text-uppercase Statistics
          ul.nav.navbar-nav.navbar-right
            li
              a(href= "/about").text-uppercase About
  div.container
    div.graphsContainer
      h1 Flight Statistics
      section.graphGroup
        div.graphWrapper
          canvas#myDepChart()
        div.graphWrapper
          canvas#myArrChart()
      section.graphGroup
        div.graphWrapper
          canvas#myDepXDaysChart()
        div.graphWrapper
          select(id="airlSelectArr", name="Airline_selection")
          input(id="arrNumDays" type="number", min="0", max="30", step="1", value="0")
          button.btn.btn-primary.text(id="arrivalsBtn" type="button") Get Data!
          canvas#myArrDelPerDayAirlLine()
        div.graphWrapper
          select(id="airlSelectDep", name="Airline_selection")
          input(id="depNumDays" type="number", min="0", max="30", step="1", value="0")
          button.btn.btn-primary.text(id="departureBtn" type="button") Get Data!
          canvas#myDepDelPerDayAirlLine()
  script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
  script(type='text/javascript' src='javascript/libs/Chart.js')
  script(type='text/javascript' src='javascript/charts.js')
